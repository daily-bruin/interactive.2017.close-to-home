{% extends "./nunjucks/templates/default.njk" %}
{% block content %}

<div class="article-content">
      <svg height="20" width="20" xmlns="http://www.w3.org/2000/svg" version="1.1">
      <defs>
        <pattern id="diagonal-stripe-3" patternunits="userSpaceOnUse" width="10" height="10">
          <rect x="0" y="0" width="10" height="10" style="fill:#809fff"/>
          <path d="M-1,1 l2,-2 M0,10 l10,-10 M9,11 l2,-2" style="stroke:#66c2ff; stroke-width:3"/>
        </pattern>
      </defs>
    </svg>

    <h1 class="increasing-number"></h1>
    <div class="interactive-bar-chart-container">
      <p>What percent do you think blah blah blah<br>Drag the bar below to make your guess</p>
      <ul class="percent-guide">
        <li>0%</li>
        <li>25%</li>
        <li>50%</li>
        <li>75%</li>
        <li>100%</li>
      </ul>
      <div class="interactive-bar-chart"></div>
      <div class="answer-bar-chart"></div>
      <button class="button secondary guess-button">Submit your guess</button>
    </div>
</div>

{% endblock %}
